@model IEnumerable<WebApplication1.Models.IncomingClothes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClothingType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClothingAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClothingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClothingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Confirm", "Confirm", new { id = item.ClothesID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClothesID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClothesID })
                @Html.ActionLink("Reject", "Reject", new { id = item.ClothesID })
                @Html.ActionLink("Edit", "Edit", new { id = item.ClothesID })
            </td>
        </tr>
    }

</table>
